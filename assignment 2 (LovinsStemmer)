      "source": [
        "import re\n",
        "\n",
        "\n",
        "suffix_rules = {\n",
        "    's': '', 'es': '', 'ed': '', 'ing': '', 'ly': '', 'er': '', 'est': '', 'ment': '', 'ness': '', 'ity': '',\n",
        "    'al': '', 'ic': '', 'ous': '', 'ful': '', 'able': '', 'ible': '', 'ant': '', 'ent': '', 'ive': '', 'ous': ''\n",
        "}\n",
        "\n",
        "def lovins_stem(word):\n",
        "    word = word.lower()\n",
        "    for suffix in sorted(suffix_rules.keys(), key=len, reverse=True):\n",
        "        if word.endswith(suffix):\n",
        "            return word[:-len(suffix)] + suffix_rules[suffix]\n",
        "    return word\n",
        "\n",
        "\n",
        "words = ['running', 'jumps', 'easily', 'happiest', 'jockey', 'mice']\n",
        "\n",
        "for word in words:\n",
        "    print(f'{word} -> {lovins_stem(word)}')\n"
      ]
    }
  ]
